package bookred.member.dao;

import java.sql.SQLException;

import org.apache.ibatis.session.SqlSession;

import bookred.book.dto.BookVO;

public class ReserveDAOImpl implements ReserveDAO {
	private SqlSession session;

	public void setSqlSession(SqlSession session) {
		this.session = session;
	}
	@Override
	public int selectRentableByISBN(String isbn) throws SQLException{
		int count = session.selectOne("Reserve-Mapper.selectRentableByISBN",isbn);
		return count;
	}
	@Override
	public BookVO selectBookByISBN(String isbn) throws SQLException {
		BookVO book = session.selectOne("Reserve-Mapper.selectBookByISBN",isbn);
		return book;
	}

}
