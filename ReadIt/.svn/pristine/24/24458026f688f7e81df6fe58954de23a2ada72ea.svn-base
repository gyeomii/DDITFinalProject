* {padding: 0;margin: 0;}
.modal .btn{cursor: pointer;border: 1px solid #031a6bbd;text-align: center;border-radius: 5px;outline: none;font-weight: 500;   padding-top: 0px;}
.dimLayer{display: block;width: 100%;background-color: rgba(0, 0, 0, 0.3);position: fixed;left: 0;top: 0px;margin: 0;padding: 0;z-index: 9998;}
.modal{width: 600px;height: 220px;border-radius: 10px;padding: 80px 24px;box-sizing: border-box;text-align: center;osition: fixed;top: 0%;left: 0%;}
.modal-section{background: #ffffff;box-sizing: border-box;display: none;position: fixed;top: 0%;left: 0%;-webkit-transform: translate(-50%, -50%);-ms-transform: translate(-50%, -50%);-moz-transform: translate(-50%, -50%);-o-transform: translate(-50%, -50%);transform: translate(-50%, -50%);display: none;z-index: 9999;}
.menu_msg{font-size: 21px;font-weight: 500;}
.enroll_box p{padding-bottom: 56px;}
.gray_btn {width: 90px;background: #ffffff;color: #999999;height: 36px;line-height: 34px;transition: 0.5s;font-size: 17px;}
.pink_btn {width: 90px;background: #031a6bbd;color: #fff;height: 36px;line-height: 34px;transition: 0.5s;font-size: 17px;border: none;}



#wrap {
  position: relative;
}
#mask {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9999;
  display: none;
}

.ModalPopup {
  position: absolute;
}