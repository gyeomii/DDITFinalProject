.wrap {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.button {
  width: 140px;
  height: 45px;
/*   font-family: 'Roboto', sans-serif; */
/*   font-size: 11px; */
  text-transform: uppercase;
  letter-spacing: 2.5px;
  font-weight: 900;
  color: #fff;
  background-color: #3f78e9;
  border: none;
  border-radius: 45px;
  box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease 0s;
  cursor: pointer;
  outline: none;
  margin-right: 10px;
  margin-left: 10px;
  }

.button:hover {
  background-color: #3f78e9;
  box-shadow: 0px 15px 20px rgba(255, 252, 185, 0.4);
  color: #fff;
  transform: translateY(-7px);
}