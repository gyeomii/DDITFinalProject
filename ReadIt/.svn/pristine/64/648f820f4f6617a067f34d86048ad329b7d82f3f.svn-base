<body>

	<div class="col-md-6 col-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">수정하기</h4>
			</div>
			<div class="card-body">
				<form class="form form-horizontal"  action="modify.do" method="post" role="modifyForm">
					<input type="hidden" name="vb_no" value="${volBoard.vb_no }" />
					<div class="row">
						<div class="col-12">
							<div class="mb-1 row">
								<div class="col-sm-3">
									<label class="col-form-label" for="first-name"> 제목</label>
								</div>
								<div class="col-sm-9">
									<input type="text" id="first-name" class="form-control"
										name="vb_title" value="${volBoard.vb_title} ">
								</div>
							</div>
						</div>
						<div class="col-12">
							<div class="mb-1 row">
								<div class="col-sm-3">
									<label class="col-form-label" for="email-id">내용</label>
								</div>
								<div class="col-sm-9">
									<input type="textarea" id="email-id" class="form-control"
										name="vb_content" value="${volBoard.vb_content} "
										style="height: 100px">
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
			<div class="col-sm-9 offset-sm-3">
				<button type="button" class="btn btn-primary" id="modifyBtn" onclick="modifyPOST_go();">수 정</button>
				<button type="button" class="btn btn-warning" id="cancelBtn" onclick="history.go(-1);" >취 소</button>
			</div>
		</div>
	</div>


	<!-- END: Content-->

	<div class="sidenav-overlay"></div>
	<div class="drag-target"></div>

	<!-- BEGIN: Vendor JS-->
