    <script>
    function cartCheck(){
    	var book_isbn = ${book.book_isbn};
    	
		$.ajax({
			url : "<%=request.getContextPath()%>/main/myInfo/checkCart.do",
			type:"post",
			data : {book_isbn:book_isbn},
			success : function(result){
				if(result == "DUPLICATED"){
// 			      alert("이미 등록되어 있는 도서입니다.");
			      action_popup.alert("이미 등록되어 있는 도서입니다");
			      
				}else{
	              insertCart();
	              
	           } 
			},
			error:function(error){
		       alert("시스템장애로 장바구니 추가가 불가합니다..");
		    }
		});
    }
    
    </script>
    
    
    <script>
    function insertCart(){
//     	alert("장바구니에추가");
    	
    	var book_no = ${book.book_no};
    	var book_isbn = ${book.book_isbn};
    	var data = {book_isbn:book_isbn,
					book_no:book_no}
    
    	$.ajax({
    		type:"post",
			url:"<%=request.getContextPath()%>/main/myInfo/insertCart.do",
			data: data,
			dataType:"text", // 보통 받아온 데이터에 JSON.parse를 할지 안할지 여부
			success:function(data){
				action_popup.confirm("장바구니에 담겼습니다. \n 확인하시겠습니까?",function(){
					goPage('<%=request.getContextPath()%>/main/myInfo/bookCart.do','M050210','ifr'); 
				})
			},
			error: function(){
				console.log("실패");
			}
				
		});
    	
    }
    
    </script>
    
    
