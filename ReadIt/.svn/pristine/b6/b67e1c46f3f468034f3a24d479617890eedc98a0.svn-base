<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="AttachV-Mapper">

	<select id="selectAttachByPno" resultType="attach">
		select * 
		from attach 
		where pno = #{pno}
	</select>	
	
	<update id="insertAttach">
		insert into 
		attach (ano, uploadpath, filename, filetype, pno, attacher)
		values (ano_seq.nextval, #{uploadPath}, #{fileName},#{fileType}, 
				#{pno},#{attacher} )
	</update>
	
	<update id="deleteAllAttach">
		delete 
		from attach 
		where pno = #{pno}
	</update>
</mapper>  






